@using NerdStoreEnterprise.WebApp.Mvc.Extensions
@inject IUser AppUser

<ul class="navbar-nav">
    @if (AppUser.IsAuthenticated())
    {
        <div class="dropdown-center">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="userProfile" data-bs-toggle="dropdown" aria-expanded="false">
                <a class="nav-link text-dark" title="Manage">
                    <img class="icon icon-sm rounded-circle" src="https://s.gravatar.com/avatar/@(this.HashEmailForGravatar(AppUser.GetUserEmail()))?d=mm&s=50" alt="User profile images"/>
                </a>
            </button>
            <ul class="dropdown-menu" aria-labelledby="userProfile">
                <li>
                    <a class="dropdown-item text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </div>
    }
    else
    {
        <li class="nav-item" style="padding-right: 30px;">
            <a class="btn btn-success" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>