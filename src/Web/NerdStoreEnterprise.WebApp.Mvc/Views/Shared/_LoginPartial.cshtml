<ul class="navbar-nav">
    @if (Context.User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Hello @Context.User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item" style="padding-right: 15px">
            <a class="btn btn-success" asp-action="Register" asp-controller="Account" title="Create an Account">Register</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-info" asp-action="Login" asp-controller="Account" title="Login">Login</a>
        </li>
    }
</ul>