@model NerdStoreEnterprise.WebApp.Mvc.Models.Errors.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

@{
    if (Model is null)
    {   
        <div>
            <h2>We are unable to fulfill your request at the moment, please try again later.</h2>
        </div>
    }
    else
    {
        <div>
            <h1 class="text-danger">@Model.Title</h1>
            <h2 class="text-danger">@Model.Description</h2>
        </div>
    }
}